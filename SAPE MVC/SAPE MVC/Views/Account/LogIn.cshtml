@model SAPE_MVC.Models.Usuario

<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sistema Administrador de Practicas de Especialidad</title>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="/Content/Styles/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="/Content/Styles/login-style.css" type="text/css" />
    <script>
        $(function () {
            $('.wrapper').css({
                position: 'absolute',
                left: ($(window).width() - $('.wrapper').outerWidth()) / 2,
                top: ($(window).height() - $('.wrapper').outerHeight()) / 2
            });
            $("body").css("height", $(window).height());
        })
    </script>
</head>
<body style="height: 612px;">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "Login Failed, check details");
        <div class="wrapper" style="position: absolute; left: 390px; top: 145.5px;">
            <h1>Iniciar sesión</h1>
            <form>
                <h2>Sistema administrador de prácticas profesionales.</h2>
                <br>
                <div class="editor-field">@Html.TextBoxFor(usuario => usuario.Nombre)@Html.ValidationMessageFor(usuario => usuario.Nombre)</div>
                <div class="editor-field">@Html.PasswordFor(usuario => usuario.Contrasena)@Html.ValidationMessageFor(usuario => usuario.Contrasena)</div>
                <input type="submit" class="btn btn-primary" value="Iniciar"/><br/>
                <small><a href="/forgot_password">¿Olvidó su contraseña?</a></small>
            </form>
        </div> 
    }</body>
</html>
