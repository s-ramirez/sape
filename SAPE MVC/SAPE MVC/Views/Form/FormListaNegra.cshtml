@{
    ViewBag.Title = "FormListaNegra";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

<div class="main-form container">
    <h2>Preferencia de profesor asesor de Practica de especialidad</h2>
    <form role="form" method="post">
        <div class="form-group">
            <label for="lcarnet">Carnet</label>
            <input id="lcarnet" class="form-control" type="text" name="lcarnet" required="required" />
        </div>

        <div class="form-group">
            <label for="lNombreEst">Nombre</label>
            <input id="lNombreEst" class="form-control" type="text" name="lNombreEst" required="required" />
        </div>

        <div class="form-group">
            <h3>Profesores que preferiria le asesoren en orden de prioridad</h3>

            <div class="form-group">
                <label for="Pref1">Preferencia 1</label>
                <select id="Pref1" class="form-control">
                    @foreach (SAPE_MVC.Models.Profesor profesor in ViewBag.Profesores)
                    {
                        <option value="@profesor.idProfesor">@profesor.Persona.Nombre + @profesor.Persona.Apellido1 + @profesor.Persona.Apellido2</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="Pref2">Preferencia 2</label>
                <select id="Pref2" class="form-control">
                    @foreach (SAPE_MVC.Models.Profesor profesor in ViewBag.Profesores)
                    {
                        <option value="@profesor.idProfesor">@profesor.Persona.Nombre + @profesor.Persona.Apellido1 + @profesor.Persona.Apellido2</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="Pref3">Preferencia 3</label>
                <select id="Pref3" class="form-control">
                    @foreach (SAPE_MVC.Models.Profesor profesor in ViewBag.Profesores)
                    {
                        <option value="@profesor.idProfesor">@profesor.Persona.Nombre + @profesor.Persona.Apellido1 + @profesor.Persona.Apellido2</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="Pref4">Preferencia 4</label>
                <select id="Pref4" class="form-control">
                    @foreach (SAPE_MVC.Models.Profesor profesor in ViewBag.Profesores)
                    {
                        <option value="@profesor.idProfesor">@profesor.Persona.Nombre + @profesor.Persona.Apellido1 + @profesor.Persona.Apellido2</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="Pref5">Preferencia 5</label>
                <select id="Pref5" class="form-control">
                    @foreach (SAPE_MVC.Models.Profesor profesor in ViewBag.Profesores)
                    {
                        <option value="@profesor.idProfesor">@profesor.Persona.Nombre + @profesor.Persona.Apellido1 + @profesor.Persona.Apellido2</option>
                    }
                </select>
            </div>

            <h2>Profesores que preferiria
                <br />
                <b>NO</b> le asesoren.</h2>
            <h3>Debe incluir razones de peso.</h3>
            <select id="Pref5" class="form-control">
                @foreach (SAPE_MVC.Models.Profesor profesor in ViewBag.Profesores)
                {
                    <option value="@profesor.idProfesor">@profesor.Persona.Nombre + @profesor.Persona.Apellido1 + @profesor.Persona.Apellido2</option>
                }
            </select>
            <br />
            <input id="razones" name="razones" type="text" class="form-control" required="required" />
            <input id="adjunta" value="+" type="button" class="btn btn-primary pull-right"/>
            <br /><br />
            <textarea id="listanegra" class="form-control" disabled="disabled"></textarea>

            <h2>Comentarios Finales</h2>
            Otro profesor que desee como asesor?
            <br />
            <textarea id="listablanca2" class="form-control"></textarea>
            <br />
            <h3>Comentarios adicionales</h3>
            <textarea id="Comentarios" class="form-control"></textarea>
            <br />
            <input id="enviar" value="Enviar" type="submit" class="btn btn-primary pull-right"/>



        </div>
    </form>
</div>
