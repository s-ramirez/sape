@{
    ViewBag.Title = "FormularioZonas";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

<div class="main-form container">
    <h2>Formulario de zonas por preferencia</h2>
    <form role="form" method="post">
        <div class="form-group">
            <label for="nombreProfesor">Seleccione su nombre:</label>
            <select id="nombreProfesor" name="nombreProfesor" class="form-control">
                @foreach (SAPE_MVC.Models.Profesor profesor in ViewBag.Profesores)
                {
                    <option value="@profesor.idProfesor">@profesor.Persona.Nombre @profesor.Persona.Apellido1 @profesor.Persona.Apellido2</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="Zona1">Preferencia 1</label>
            <select id="Zona1" name="zona1" class="form-control">
                @foreach (SAPE_MVC.Models.Ciudad ciudad in ViewBag.Ciudad)
                {
                    <option value ="@ciudad.idCiudad">@ciudad.Nombre, @ciudad.Provincia.Nombre</option> 
                }
            </select>
        </div>

        <div class="form-group">
