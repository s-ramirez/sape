                }
            </select>
        </div>

        <div class="form-group">
            <label for="Zona4">Preferencia 4</label>
            <select id="Zona4" name="zona4" class="form-control">
                @foreach (SAPE_MVC.Models.Ciudad ciudad in ViewBag.Ciudad)
                {
                    <option value ="@ciudad.idCiudad">@ciudad.Nombre, @ciudad.Provincia.Nombre</option> 
